{
  "name": "my-vue-app",
  "version": "0.1.0",
  "private": true,
  "description": "Aplicación de escritorio para gestión de jugadores",
  "homepage": "https://example.com/my-vue-app",
  "author": {
    "name": "Tu Nombre",
    "email": "tu@correo.com"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "electron:serve": "concurrently \"npm run serve\" \"cross-env ELECTRON_DEV=1 wait-on http://localhost:8080 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "lint": "vue-cli-service lint"
  },
  "main": "electron-main.js",
  "build": {
    "appId": "com.mycompany.myvueapp",
    "productName": "MyVueApp",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "core-js": "^3.8.3",
    "electron-store": "^8.1.0",
    "fetch-cookie": "^3.1.0",
    "keytar": "^7.7.0",
    "node-fetch": "^2.7.0",
    "pinia": "^3.0.3",
    "tough-cookie": "^6.0.0",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "wait-on": "^6.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
